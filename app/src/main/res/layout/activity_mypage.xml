<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".mypage">
    <TextView
        android:id="@+id/textView16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bmfont"
        android:textSize="25dp"
        android:textColor="@color/vpi__background_holo_light"
        android:gravity="center"
        android:text="마이페이지" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmfont"
                android:textSize="20dp"
                android:textColor="@color/vpi__background_holo_light"
                android:gravity="center"
                android:text="회원 정보" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bmfont"
                    android:textSize="20dp"
                    android:textColor="@color/vpi__background_holo_light"
                    android:layout_marginLeft="10dp"
                    android:text="아이디" />

                <TextView
                    android:id="@+id/tvMypageId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/bmfont"
                    android:textSize="15dp"
                    android:textColor="@color/btnColor"
                    android:hint="tvMypageId"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bmfont"
                    android:textSize="20dp"
                    android:textColor="@color/vpi__background_holo_light"
                    android:layout_marginLeft="10dp"
                    android:text="이름 " />

                <TextView
                    android:id="@+id/tvMypageName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/bmfont"
                    android:textSize="15dp"
                    android:textColor="@color/btnColor"
                    android:hint="tvMypageName"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bmfont"
                    android:textSize="20dp"
                    android:textColor="@color/vpi__background_holo_light"
                    android:layout_marginLeft="10dp"
                    android:text="핸드폰 번호" />

                <TextView
                    android:id="@+id/tvMypagePhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/bmfont"
                    android:textSize="15dp"
                    android:textColor="@color/btnColor"
                    android:hint="tvMypagePhone"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bmfont"
                    android:textSize="20dp"
                    android:textColor="@color/vpi__background_holo_light"
                    android:layout_marginLeft="10dp"
                    android:text="주소 " />

                <TextView
                    android:id="@+id/tvMypageAddr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/bmfont"
                    android:textSize="15dp"
                    android:textColor="@color/btnColor"
                    android:hint="tvMypageAddr"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bmfont"
                    android:textSize="20dp"
                    android:textColor="@color/vpi__background_holo_light"
                    android:layout_marginLeft="10dp"
                    android:text="성별 " />

                <TextView
                    android:id="@+id/tvMypageGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/bmfont"
                    android:textSize="15dp"
                    android:textColor="@color/btnColor"
                    android:hint="tvMypageGender"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmfont"
                android:textSize="20dp"
                android:textColor="@color/vpi__background_holo_light"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:text="추가 정보" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bmfont"
                    android:textSize="20dp"
                    android:textColor="@color/vpi__background_holo_light"
                    android:layout_marginLeft="10dp"
                    android:text="누적 포인트 " />

                <TextView
                    android:id="@+id/tvMypagePoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/bmfont"
                    android:textSize="15dp"
                    android:textColor="@color/btnColor"
                    android:hint="tvMypagePoint"
                    />
            </LinearLayout>

            <Button
                android:id="@+id/btnMypageChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/btnColor"
                android:fontFamily="@font/bmfont"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:layout_marginBottom="5dp"
                android:background="@color/fui_transparent"
                android:text="정보 수정" />

            <Button
                android:id="@+id/btnMypageHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/btnColor"
                android:fontFamily="@font/bmfont"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:background="@color/fui_transparent"
                android:text="컴백 홈" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/bmfont"
                    android:gravity="center"
                    android:text="나의 사용 기록"
                    android:textColor="@color/vpi__background_holo_light"
                    android:textSize="20dp" />

                <ScrollView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/MypageRecyclerview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </ScrollView>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>




</LinearLayout>