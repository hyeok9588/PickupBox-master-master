<?xml version="1.0" encoding="utf-8"?>

<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/bottom_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:weightSum="2">

            <TextView
                android:id="@+id/tvEdit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#0076a5"
                android:gravity="center"
                android:fontFamily="@font/bmfont"
                android:text="자세히"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/tvDeal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#003c54"
                android:gravity="center"
                android:fontFamily="@font/bmfont"
                android:text="딜하기"
                android:textColor="#fff" />
        </LinearLayout>



    <LinearLayout
        android:id="@+id/bottom_wrapper1"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:weightSum="1">

        <TextView
            android:id="@+id/tvPlus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#003c54"
            android:gravity="center"
            android:fontFamily="@font/bmfont"
            android:text="관심삭제"
            android:textColor="#fff" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="10sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/boxName"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bmfont"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:text="BoxName"
                        android:textColor="@color/BoxNameColor"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/boxSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bmfont"
                        android:text="boxSize"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:textColor="@color/BoxSizeColor"
                        android:textSize="17sp" />

                </LinearLayout>




                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_marginLeft="5dp"

                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/userName"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:fontFamily="@font/bmfont"
                            android:textColor="@color/design_default_color_secondary_variant"
                            android:textSize="20sp" />




                    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"

                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/boxPrice"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:fontFamily="@font/bmfont"
                            android:gravity="center"
                            android:text="BoxPrice"
                            android:textColor="@color/PriceColor"
                            android:textSize="30sp" />




                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="5dp"
                        android:orientation="horizontal"
                        android:visibility="invisible">

                        <TextView
                            android:id="@+id/myLatitude"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/bmfont"
                            android:text="myLatitude"
                            android:textColor="@color/design_default_color_secondary_variant"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/myLongitude"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/bmfont"
                            android:text="myLongitude"
                            android:textColor="@color/design_default_color_secondary_variant"
                            android:textSize="10dp" />


                        <TextView
                            android:id="@+id/destLatitude"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/bmfont"
                            android:text="destLatitude"
                            android:textColor="@color/design_default_color_secondary_variant"
                            android:textSize="10dp" />


                        <TextView
                            android:id="@+id/destLongitude"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/bmfont"
                            android:text="destLongitude"
                            android:textColor="@color/design_default_color_secondary_variant"
                            android:textSize="10dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/IDkeyValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/bmfont"
                            android:text="keyValue"
                            android:textColor="@color/design_default_color_secondary_variant"
                            android:textSize="10dp" />


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>
</com.daimajia.swipe.SwipeLayout>
