<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    tools:context=".Main_Page.PickupDetail">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bmfont"
        android:textColor="@color/vpi__background_holo_light"
        android:gravity="center"
        android:text="상품 상세 정보"

        android:textSize="25sp" />

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">

                        <TextView
                            android:id="@+id/tvDetailName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/bmfont"
                            android:gravity="center"
                            android:text="상품 이름"
                            android:textColor="@color/common_google_signin_btn_text_light"
                            android:textSize="20dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="220dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/bmfont"
                            android:gravity="center_horizontal"
                            android:text="사이즈 : "
                            android:textColor="@color/common_google_signin_btn_text_light"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tvDetailSize"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:fontFamily="@font/bmfont"
                            android:gravity="center_horizontal"
                            android:hint="사이즈값"
                            android:textColor="@color/common_google_signin_btn_text_light"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="220dp"
                            android:layout_height="wrap_content"

                            android:fontFamily="@font/bmfont"
                            android:gravity="center_horizontal"
                            android:text="제안 가격 : "
                            android:textColor="@color/common_google_signin_btn_text_light"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tvDetailPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:fontFamily="@font/bmfont"
                            android:gravity="center_horizontal"
                            android:hint="제안 가격"
                            android:textColor="@color/common_google_signin_btn_text_light"
                            android:textSize="20sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="220dp"
                            android:layout_height="wrap_content"

                            android:fontFamily="@font/bmfont"
                            android:gravity="center_horizontal"
                            android:text="원하는 도착시간 : "
                            android:textColor="@color/common_google_signin_btn_text_light"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tvDetailPTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:fontFamily="@font/bmfont"
                            android:gravity="center_horizontal"
                            android:hint="시간"
                            android:textColor="@color/common_google_signin_btn_text_light"
                            android:textSize="20sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="220dp"
                            android:layout_height="wrap_content"

                            android:fontFamily="@font/bmfont"
                            android:gravity="center_horizontal"
                            android:text="배송지까지 예상 소요거리 : "
                            android:textColor="@color/common_google_signin_btn_text_light"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tvDetailDistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:fontFamily="@font/bmfont"
                            android:gravity="center_horizontal"
                            android:hint="거리"
                            android:textColor="@color/common_google_signin_btn_text_light"
                            android:textSize="17sp" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="220dp"
                            android:layout_height="wrap_content"

                            android:fontFamily="@font/bmfont"
                            android:gravity="center_horizontal"
                            android:text="배송지까지 예상 소요시간 : "
                            android:textColor="@color/common_google_signin_btn_text_light"
                            android:textSize="20sp" />


                        <TextView
                            android:id="@+id/tvDetailDuration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:fontFamily="@font/bmfont"
                            android:gravity="center_horizontal"
                            android:hint="시간"
                            android:textColor="@color/common_google_signin_btn_text_light"
                            android:textSize="17sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:fontFamily="@font/bmfont"
                            android:gravity="center_horizontal"
                            android:text="비슷한 조건의 평균 배송 가격"
                            android:textColor="@color/common_google_signin_btn_text_light"
                            android:textSize="20sp" />

                        <NumberPicker
                            android:id="@+id/number_picker"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:fontFamily="@font/bmfont"
                            android:textColor="@color/common_google_signin_btn_text_light"
                            android:textSize="20sp" />

                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnDetailDeal"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/bmfont"
                android:background="@color/fui_transparent"
                android:textColor="@color/common_google_signin_btn_text_light"
                android:textSize="20sp"
                android:text="가격을 딜 하기" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <com.google.android.gms.maps.MapView
                    android:id="@+id/mapV2"
                    android:name="com.google.android.gms.maps.MapFragment"
                    android:layout_width="330dp"
                    android:layout_height="280dp"
                    android:layout_gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/bmfont"
                    android:gravity="center"
                    android:text="조건이 유사한 상품"
                    android:textColor="@color/common_google_signin_btn_text_light"
                    android:textSize="20dp" />

                <ScrollView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewDetail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </ScrollView>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>














</LinearLayout>